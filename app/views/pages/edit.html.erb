<div class="row">
<div class="span12">

<% if current_user.present? %>

   <% if params[:type] == "definition" %>
    <h3>Add Definition (<%= @page.name %>)</h3>
    <div class="alert alert-info">
    <h6><span class="glyphicon icon-info-sign"></span> Define <%= @page.name %> in one short sentence.
    </h6>
    </div>
    <%= render 'adddefinition' %>
   <% end %>
   <% if params[:type] == "image" %>
    <h3>Upload Image</h3>
    <%= render 'addimage' %> 
  <% end %>

<% end %>

 </div>
</div>
