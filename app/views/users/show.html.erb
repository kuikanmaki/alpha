<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= link_to (image_tag @user.avatar.url(:thumb)), @user %><br><br>
      <h1>
        <%= @user.name %>
      </h1>
      <% if(@user == current_user) %>
        <%= link_to 'Add Profile Picture', edit_user_path(@user) %>
      <% end %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
  <% if @interests.any? %>
    <h3>Interests (<%= @interests.count %>)</h3>

          <% end %>
    <% if @user.notes.any? %>
      <h3>Notes (<%= @user.notes.count %>)</h3>
      <ol class="notes">
        <%= render @notes %>
      </ol>
      <%= will_paginate @notes %>
    <% end %>
  </div>
</div>